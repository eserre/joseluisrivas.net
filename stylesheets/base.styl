// This is for correct box-stretching function
*:focus
  outline none
html
  height 100%
body
  height 100%
  // From here is just basic styling
  margin 0
  padding 0
  font 14px Helvetica, Arial, sans-serif
  font-style normal
  font-weight normal
  background url('../img/bg.png')

a
  text-decoration none
strong
  font-weight bold
em
  font-style italic

// Classes!
// Clearfix
.clearfix:before, .clearfix:after
  content: ''
  display: table
.clearfix:after
  clear: both
.clearfix
  *zoom: 1

.collapse
  transition height 0.35s ease
  position relative
  overflow hidden
  height 0
.collapse.in
  height auto

// Miscellaneous base functions
.pull-right, .right
  float right
.pull-left, .left
  float left
.hide
  display none
.show
  display block
.invisible
  visibility hidden
.btn
  padding 0.44em 1em
  border-radius 0.33em
  box-shadow 0.11em 0.11em 0.55em $light-gray
